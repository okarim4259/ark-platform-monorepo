    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "csurf": "^1.9.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-rate-limit": "^3.3.2",
    "helmet": "^3.15.0",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.2.0",
    "log4js": "^3.0.6",
    "passport": "^0.4.0",
    "passport-facebook-token": "^3.3.0",
    "passport-google-plus-token": "^2.1.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.7.1",
    "reflect-metadata": "^0.1.12",
