    "@types/express-rate-limit": "^2.9.4",
    "@types/helmet": "0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "@types/passport": "^0.4.7",
    "@types/passport-jwt": "^3.0.1",
    "chai": "^4.2.0",
